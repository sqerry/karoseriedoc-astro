---
import { getLangFromUrl, type Lang, defaultLang } from '../i18n';

const { customClass } = Astro.props;
const currentLang = getLangFromUrl(Astro.url);
const currentPath = Astro.url.pathname;

// Build alternate path
let alternatePath: string;
let alternateCode: string;
if (currentLang === 'de') {
    alternatePath = currentPath.replace(/^\/de/, '') || '/';
    alternatePath = alternatePath
        .replace('/dienstleistungen', '/sluzby');
    alternateCode = 'cs';
} else {
    alternatePath = `/de${currentPath}`;
    alternatePath = alternatePath
        .replace('/sluzby', '/dienstleistungen');
    alternateCode = 'de';
}

const languages = [
    { code: 'cs', name: 'ÄŒesky', flag: '/images/icons/cz.svg' },
    { code: 'de', name: 'Deutsch', flag: '/images/icons/de.svg' },
];

const currentLanguage = languages.find(l => l.code === currentLang);
const alternateLanguage = languages.find(l => l.code === alternateCode);
---

<div class={`custom-language-selector lang-switcher ${customClass}`}>
    <button class="language-select-btn">
        <img
            src={currentLanguage?.flag}
            alt="Current language flag"
            class="flag-icon"
        />
    </button>
    <ul class="language-select-dropdown">
        <li>
            <a href={alternatePath} data-lang={alternateCode} class="lang-switch-link">
                <img src={alternateLanguage?.flag} alt={`${alternateLanguage?.name} flag`} class="flag-icon" />
            </a>
        </li>
    </ul>
</div>

<script>
    document.addEventListener('astro:page-load', () => {
        const languageSelectors = document.querySelectorAll('.custom-language-selector')
        if (!languageSelectors.length) return;

        languageSelectors.forEach((languageSelector) => {
            const selectBtn = languageSelector.querySelector('.language-select-btn')
            const dropdown = languageSelector.querySelector('.language-select-dropdown')

            selectBtn?.addEventListener('click', (e) => {
                e.stopPropagation()
                // Close all other dropdowns first
                languageSelectors.forEach((other) => {
                    if (other !== languageSelector) {
                        other.querySelector('.language-select-dropdown')?.classList.remove('show')
                    }
                })
                dropdown?.classList.toggle('show')
            })

            // Store language preference when user manually switches
            const langLinks = languageSelector.querySelectorAll('.lang-switch-link')
            langLinks.forEach((link) => {
                link.addEventListener('click', () => {
                    const targetLang = link.getAttribute('data-lang')
                    if (targetLang && typeof window.setLanguagePreference === 'function') {
                        window.setLanguagePreference(targetLang)
                    }
                })
            })
        })

        window.addEventListener('click', () => {
            languageSelectors.forEach((selector) => {
                selector.querySelector('.language-select-dropdown')?.classList.remove('show')
            })
        })
    })
</script>

<style lang="scss">
    .header-lang-switcher {
        position: absolute !important;
        cursor: pointer;
        right: 1.5rem;
        background-color: $clr-black;
        font-size: 2.8rem;

        @media (max-width: 1023px) {
            display: none !important;
        }
    }
    .flag-icon {
        width: 20px;
        height: 15px;
        vertical-align: middle;
    }
    .custom-language-selector {
        position: relative;
        display: inline-block;

        .language-select-btn {
            display: flex;
            align-items: center;
            background-color: transparent;
            border: none;
            cursor: pointer;
            padding: 5px 10px;
            font-size: inherit;
            color: inherit;
        }

        .language-select-dropdown {
            display: none;
            position: absolute;
            background-color: #1d2226;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 5;

            &.show {
                display: block;
            }

            li {
                a {
                    color: black;
                    padding: 12px 12px;
                    text-decoration: none;
                    display: flex;
                    align-items: center;

                    &:hover {
                        background-color: $clr-primary;
                    }

                    &.active {
                        background-color: $clr-primary;
                    }
                }
            }
        }
    }
</style>
