<a href="/" class="logo">
    <!-- Karoserie<span>Doc</span> -->
    <img
        src="/karoseriedoc-logo.webp"
        alt="Karoserie Doc"
        width="154"
        height="65"
        style="max-height: 6.5rem; width: auto;"
    />
</a>

<script>
    function updateLogo() {
        const htmlLang = document.documentElement.lang
        const logo = document.querySelector('.logo')

        if (htmlLang === 'cs') {
            logo.setAttribute('href', '/')
        } else {
            logo.setAttribute('href', `/${htmlLang}/`)
        }
    }
    document.addEventListener('DOMContentLoaded', updateLogo)
    document.addEventListener('astro:after-swap', updateLogo)
</script>

<style lang="scss">
    .logo {
        color: $clr-primary;
        font-size: 3.6rem;
        font-family: $ff-heading;

        @media (max-width: 1199px) {
            font-size: 2.6rem;
        }
        span {
            color: $clr-white;
        }
    }
</style>
