---
import { useTranslations } from "../i18n/utils";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import USP from "../components/USP.astro";
import Services from "../components/Services.astro";
import Title from "../components/Title.astro";
import About from "../components/About.astro";

const lang = 'cs';
const t = useTranslations(lang);
---

<Layout
    title="Opravy promáčklin bez lakování metodou PDR | KaroserieDoc Chodová Planá"
    description="Opravy promáčklin bez lakování metodou PDR v Chodové Plané. Opravy po kroupách, karosářské práce a ochranné nástřiky. Konzultace zdarma!"
    image="/images/DSC_5058.webp">
    <main>
        <Hero lang={lang} />
        <USP lang={lang} />
        <section class="services-section">
            <Title subtitle={t('services.subtitle')} title={t('services.title')} position="center" />
            <div class="container">
                <Services lang={lang} />
            </div>
        </section>
        <About lang={lang} />
    </main>
</Layout>

<style lang="scss">
    .services-section {
        padding: 4rem 0;

        @media (max-width: 767px) {
            padding: 2.5rem 0;
        }
    }
</style>
