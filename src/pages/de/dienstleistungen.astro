---
import { useTranslations } from "../../i18n/utils";
import Layout from "../../layouts/Layout.astro";
import PageHeader from "../../components/PageHeader.astro";
import Title from "../../components/Title.astro";
import Services from "../../components/Services.astro";

const lang = 'de';
const t = useTranslations(lang);
---

<Layout
    title="Unsere Dienstleistungen - Karosseriefachbetrieb KaroserieDoc"
    description="Komplettes Serviceangebot der Karosseriefachbetrieb KaroserieDoc: PDR-Dellenentfernung, Hagelschadenreparatur, Unterbodenschutz, Karosseriearbeiten, Klimaanlagenwartung, Reifenservice. Alles an einem Ort!"
    image="/images/DSC_5264.webp">
    <PageHeader pageName={t('services.servicesPageTitle')} imageSrc="/images/DSC_5264.webp" />
    <main>
        <section class="services-section">
            <Title subtitle={t('services.subtitle')} title={t('services.title')} position="center" />
            <div class="container">
                <Services lang={lang} />
            </div>
        </section>
    </main>
</Layout>

<style lang="scss">
    .services-section {
        padding-top: 5rem;

        @media (max-width: 767px) {
            padding-top: 2rem;
        }
    }
</style>
