---
import ResetCSS from '@appzic/astro-reset-css'
import Header from '../layouts/Header.astro'
const { title, description } = Astro.props
---

<!doctype html>
<html lang="cs">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Heebo:wght@100..900&family=Russo+One&display=swap"
            rel="stylesheet"
        />

        <ResetCSS />
        <title>{title}</title>
    </head>

    <body>
        <Header />

        <slot />

        <script src="../script.js"></script>

        <style lang="scss" is:global>
            html {
                font-size: 62.5%;
                background-color: $clr-black;
                color: $clr-white;
            }
            .swiper {
                width: 100%;

                .swiper-pagination-bullet {
                    background-color: $clr-primary;
                    width: 1rem;
                    height: 1rem;
                }
                .swiper-button-prev,
                .swiper-button-next {
                    color: $clr-white;
                    width: 5rem;
                    height: 5rem;
                    transition: 0.3s;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;

                    &:hover {
                        background-color: $clr-primary-hover;
                    }

                    &:after {
                        font-size: 2rem;
                    }
                }
            }
            body {
                font-size: 1.6rem;
                height: 120vh;
                font-family: $ff-primary;
            }
            .container {
                width: 128rem;
                padding: 0 2rem;
                max-width: calc(100% - 4rem);
                margin-left: auto;
                margin-right: auto;

                @media (max-width: 1023px) {
                }
                @media (max-width: 767px) {
                    width: 100%;
                    max-width: calc(100% - 2rem);
                    padding: 0 1rem;
                }
            }
            h1,
            h2,
            h3,
            h4,
            h5,
            .title,
            .sub-title {
                font-family: 'Russo One', sans-serif;
            }

            a {
                color: $clr-white;
                transition: 0.3s;

                &:hover,
                &:focus {
                    color: $clr-primary !important;
                }
            }

            .hamburger-menu {
                .mobile-nav {
                    opacity: 0;
                    transition: 2s;
                }
                &.active {
                    background-color: red;

                    .mobile-nav {
                        z-index: 99;
                        display: block;
                        width: 100%;
                        position: absolute;
                        left: 0;
                        top: 0;
                        background-color: $clr-black;
                        opacity: 1;
                        .site-nav {
                            width: 100%;
                            height: 100vh;
                            display: flex;
                            justify-content: center;
                            align-items: center;

                            ul {
                                flex-direction: column;
                                align-items: center;
                            }
                        }
                    }
                }
            }

            .btn {
                color: $clr-black;
                background-color: $clr-primary;
                min-height: 45px;
                max-width: 180px;
                display: flex;
                align-items: center;
                font-family: $ff-primary;
                justify-content: center;
                font-weight: 600;

                &:hover {
                    color: $clr-black !important;
                    background-color: $clr-primary-hover;
                }
            }
        </style>
    </body>
</html>
